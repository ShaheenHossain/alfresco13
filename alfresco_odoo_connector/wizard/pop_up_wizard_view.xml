                </group>
                <footer>
                    <button special="cancel" string="OK" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="pop_site_wizard_view" model="ir.ui.view">
        <field name="name">pop.site.content</field>
        <field name="model">site</field>
        <field name="arch" type="xml">
