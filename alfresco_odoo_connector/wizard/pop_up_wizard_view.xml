                </group>
                <footer>
                    <button special="cancel" string="OK" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="pop_folder_wizard_view" model="ir.ui.view">
        <field name="name">pop.folder.content</field>
