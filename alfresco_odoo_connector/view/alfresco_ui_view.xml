<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_order_document_alfresco" model="ir.ui.view">
        <field name="name">Sale Order - Documents For Alfresco</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Documents" groups="base.group_user">
                    <group>
                        <div>
                            <button name="save_document_content"  class="btn btn-light"
                                    icon="fa-refresh" type="object" groups="base.group_user" help="Refresh Repository"/>
                            <button name="create_folders" class="btn btn-light"
                                    icon="fa-folder" type="object" groups="base.group_user" help="Create Folder"/>
                            <button name="%(action_upload_files)d" class="btn btn-light"
                                    icon="fa-file-text" type="action" groups="base.group_user" help="Import Files"/>
                        </div>
                    </group>
                    <group>
                        <group>
                            <field name="search_folder"/>
                        </group>
                    </group>
                    <field name="notebook_ids" widget="one2many">
                        <tree string="Details">
                            <field name="document_name"/>
                            <button name="delete_files"
                                    icon="fa-trash" type="object" groups="base.group_user"/>
                            <button name="download_files"
                                    icon="fa-download" type="object" groups="base.group_user"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <record id="upload_files_id" model="ir.ui.view">
        <field name="name">upload.files.id</field>
        <field name="model">alfresco.files.folder</field>
        <field name="arch" type="xml">
            <form string="Upload File">
                <group>
                    <group>
                        <field name="alf_file" filename="alf_file_name" required="1" widget="many2many_binary"/>
                        <field name="alf_folder_path" required="True" options="{'no_open':True,'no_create':1,'no_create_edit':1}"/>
                        <!--                            <field name="alf_file_title" placeholder="optional"/>-->
                        <!--                            <field name="alf_file_description" placeholder="optional"/>-->
                        <!--                            <field name="alf_file_name" invisible="1"/>-->
                    </group>
                </group>
                <footer>
                    <button name="upload_files" string="Upload File" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_upload_files" model="ir.actions.act_window">
        <field name="name">Upload Files</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">alfresco.files.folder</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="upload_files_id"/>
        <field name="target">new</field>
    </record>

